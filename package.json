{
  "name": "mcp-monster-jobs",
  "version": "1.0.0",
  "description": "MCP Server for Monster.com job search functionality with advanced filtering and detailed job retrieval",
  "main": "monster_mcp_server.js",
  "bin": {
    "mcp-monster-jobs": "./monster_mcp_server.js"
  },
  "scripts": {
    "start": "node monster_mcp_server.js",
    "dev": "node --inspect monster_mcp_server.js",
    "test": "jest",
    "lint": "eslint .",
    "format": "prettier --write ."
  },
  "keywords": [
    "mcp",
    "mcp-server",
    "monster",
    "jobs",
    "job-search",
    "careers",
    "employment",
    "recruitment",
    "scraping",
    "automation"
  ],
  "author": "kdkiss",
  "license": "MIT",
  "mcp": {
    "mcpVersion": "0.5.0",
    "name": "monster-jobs",
    "displayName": "Monster Jobs",
    "description": "Search and retrieve job listings from Monster.com with location filtering and detailed job information",
    "category": "productivity",
    "tags": [
      "jobs",
      "search",
      "careers",
      "employment"
    ],
    "server": {
      "command": "node",
      "args": ["monster_mcp_server.js"],
      "env": {}
    },
    "tools": [
      {
        "name": "search_monster_jobs",
        "description": "Search for jobs on Monster.com with location and radius filters"
      },
      {
        "name": "get_job_details", 
        "description": "Get detailed information for a specific job from search results"
      }
    ]
  },
  "type": "module",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "cheerio": "^1.0.0-rc.12",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "prettier": "^3.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kdkiss/mcp-monster-jobs.git"
  },
  "bugs": {
    "url": "https://github.com/kdkiss/mcp-monster-jobs/issues"
  },
  "homepage": "https://github.com/kdkiss/mcp-monster-jobs#readme",
  "files": [
    "monster_mcp_server.js",
    "README.md",
    "LICENSE",
    "package.json"
  ]
}