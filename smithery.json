{
  "name": "monster-jobs-mcp",
  "version": "1.0.0",
  "description": "A Smithery MCP server for retrieving job listings from Monster.com with natural language search queries",
  "author": "Manus AI",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/monster-jobs-mcp"
  },
  "keywords": [
    "mcp",
    "jobs",
    "monster",
    "search",
    "recruitment",
    "hr",
    "employment"
  ],
  "main": "src/main.py",
  "runtime": "python",
  "python_version": "3.11",
  "dependencies": {
    "flask": "^2.3.0",
    "beautifulsoup4": "^4.13.0",
    "requests": "^2.32.0",
    "flask-sqlalchemy": "^3.0.0"
  },
  "endpoints": {
    "search": {
      "method": "POST",
      "path": "/api/search",
      "description": "Search for jobs using natural language queries",
      "parameters": {
        "query": {
          "type": "string",
          "required": true,
          "description": "Natural language job search query (e.g., 'hr admin jobs near winnetka within 5 miles')"
        },
        "max_jobs": {
          "type": "integer",
          "required": false,
          "default": 10,
          "description": "Maximum number of jobs to return"
        }
      }
    },
    "health": {
      "method": "GET",
      "path": "/api/health",
      "description": "Health check endpoint"
    }
  },
  "environment": {
    "FLASK_ENV": "production",
    "FLASK_DEBUG": "false"
  },
  "port": 5000,
  "health_check": "/api/health",
  "documentation": {
    "readme": "README.md",
    "examples": [
      {
        "title": "Basic Job Search",
        "description": "Search for HR admin jobs near Winnetka",
        "request": {
          "method": "POST",
          "url": "/api/search",
          "body": {
            "query": "hr admin jobs near winnetka within 5 miles",
            "max_jobs": 10
          }
        }
      },
      {
        "title": "Software Engineer Search",
        "description": "Search for software engineer positions",
        "request": {
          "method": "POST",
          "url": "/api/search",
          "body": {
            "query": "software engineer jobs near san francisco within 10 miles",
            "max_jobs": 5
          }
        }
      }
    ]
  },
  "tags": [
    "job-search",
    "monster-com",
    "recruitment",
    "hr-tools",
    "employment-api"
  ],
  "category": "productivity",
  "maturity": "beta",
  "support": {
    "email": "support@example.com",
    "documentation": "https://github.com/your-username/monster-jobs-mcp/blob/main/README.md"
  }
}

